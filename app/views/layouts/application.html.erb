<%= content_for :stylesheets do %>
    <!--[if IE 8]><%= stylesheet_link_tag('internet-explorer/ie8.css') %><![endif]-->
    <%= stylesheet_link_tag('application.css') %>
<% end %>

<% content_for :content_override do %>
    <main id="wrapper" role="main">
      <div class="container">
        <div class="phase-banner">
          <p>
            <strong class="phase-tag"><%= t(:current_phase) %></strong>
            <span><%= t(:phase_message) %></span>
          </p>
        </div>
      </div>
      <div class="container">
        <section class="content inner cf" id="content">
          <%= yield %>
        </section>
      </div>
    </main>
<% end %>

<% content_for :proposition_links do %>
  <% if user_signed_in? %>
    <div class='sign-out'>
      <%= button_to t(:sign_out), destroy_user_session_path, method: :delete %>
    </div>
  <% end %>
<% end %>

<% content_for :javascripts do %>
    <%= javascript_include_tag 'application.js' %>
<% end %>

<%= render template: 'layouts/moj_template' %>
