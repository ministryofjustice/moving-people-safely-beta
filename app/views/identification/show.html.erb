<%= form_for person, url: identification_path, method: :post do |f| %>

  <%= flash.now[:success] || flash.now[:error] %>

  <br />

  <%- if person.errors.any? %>
    <%= person.errors.full_messages %>
  <% end %>

  <%= f.label :prison_number %>:
  <%= f.text_field :prison_number %>

  <br />

  <%= f.label :family_name %>:
  <%= f.text_field :family_name %>

  <br />

  <%= f.label :forenames %>:
  <%= f.text_field :forenames %>

  <br />

  <%= f.label :date_of_birth %>:
  <%= text_field_tag 'person[date_of_birth(3i)]', (person.date_of_birth.day if person.date_of_birth?), maxlength: 2, size: 2 %>
  <%= text_field_tag 'person[date_of_birth(2i)]', (person.date_of_birth.month if person.date_of_birth?), maxlength: 2, size: 2 %>
  <%= text_field_tag 'person[date_of_birth(1i)]', (person.date_of_birth.year if person.date_of_birth?), maxlength: 4, size: 4 %>

  <br />

  <%= f.label :sex %>:
  <%= f.radio_button :sex, 'male' %>
  <%= f.label :sex, 'Male', value: 'male' %>
  <%= f.radio_button :sex, 'female' %>
  <%= f.label :sex, 'Female', value: 'female' %>

  <br />

  <%= f.label :nationality %>:
  <%= f.text_field :nationality %>

  <br />

  <%= f.label :pnc_number, 'PNC number' %>:
  <%= f.text_field :pnc_number %>

  <br />

  <%= f.label :cro_number, 'CRO number' %>:
  <%= f.text_field :cro_number %>

  <br />

  <%= f.submit 'Save' %>
<% end %>
