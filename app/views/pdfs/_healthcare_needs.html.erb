<div class="healthcare_needs">
  <div class="section-heading">
    <div class="heading">
      <h2><%= t('.heading') %></h2>
    </div>
    <div class="persistent-info">
      <span class="label"><%= t('pdfs.shared.identifiers_label') %></span>
      <div class="input"></div>
    </div>
  </div>
  <div class="health-section">
    <strong><%= t('.physical_health_risks') %></strong>
    <div class="content"><%= healthcare.physical_risk_details %></div>
  </div>
  <div class="health-section">
    <strong><%= t('.mental_health_risks') %></strong>
    <div class="content"><%= healthcare.mental_risk_details %></div>
  </div>
  <div class="health-section">
    <strong><%= t('.social_care_and_other_needs') %></strong>
    <div class="content"><%= healthcare.social_care_and_other_details %></div>
  </div>
  <div class="health-section">
    <strong><%= t('.allergies') %></strong>
    <div class="content"><%= healthcare.allergies_details %></div>
  </div>
  <div class="health-section disabilities">
    <strong><%= t('.disabilities') %></strong>
    <div class="mpv-required">
      <div class='check-box <%= healthcare.mpv_required_class %>'></div>
      <div><%= t('.mpv_required') %></div>
    </div>
    <div class="content"><%= healthcare.disabilities_details %></div>
  </div>
</div>

<div class="healthcare-updates">
  <table class="bordered-table">
    <tr>
      <th><%= t('.completed_by') %></th>
      <th><%= t('.phone_number') %></th>
    </tr>
    <tr>
      <td><%= healthcare.medical_professional_name %></td>
      <td><%= healthcare.contact_telephone %></td>
    </tr>
  </table>
  <div class="updates">
    <strong><%= t('.updates') %></strong>
    <div><%= t('.update_instructions') %></div>
    <div class="input"></div>
  </div>
</div>

<div class="healthcare-signpost">
  <%= t('.fill_in_details.') %> <strong><%= t('.details_section') %></strong>
</div>
