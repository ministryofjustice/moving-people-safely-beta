<div class="healthcare_needs">
  <div class="section-heading">
    <div class="heading">
      <h2><%= t('.heading') %></h2>
    </div>
    <div class="persistent-info">
      <span class="label"><%= t('pdfs.shared.identifiers_label') %></span>
      <div class="input"></div>
    </div>
  </div>
  <div class="health-section">
    <strong><%= t('.physical_health_risks') %></strong>
    <div class="content"></div>
  </div>
  <div class="health-section">
    <strong><%= t('.mental_health_risks') %></strong>
    <div class="content"></div>
  </div>
  <div class="health-section">
    <strong><%= t('.social_care_and_other_needs') %></strong>
    <div class="content"></div>
  </div>
  <div class="health-section">
    <strong><%= t('.allergies') %></strong>
    <div class="content"></div>
  </div>
  <div class="health-section disabilities">
    <strong><%= t('.disabilities') %></strong>
    <div class="mpv-required">
      <div></div>
      <div><%= t('.mpv_required') %></div>
    </div>
