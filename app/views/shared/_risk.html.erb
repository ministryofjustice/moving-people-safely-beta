<fieldset class="js_has_optional_section">
  <div class="form-group">
    <legend class="form-label-bold">
      <span>
        <%= t(".types.#{risk}.title") %>
      </span>
    </legend>
    <p class="form-hint"><%= t(".types.#{risk}.help_text") %></p>
    <div class="form-group">
      <%= f.label risk, value: true, class: 'block-label inline' do %>
          <%= f.radio_button risk, true %> <%= t(:yes) %>
      <% end %>
      <%= f.label risk, value: false, class: 'block-label inline' do %>
          <%= f.radio_button risk, false %> <%= t(:no) %>
      <% end %>

      <%= f.radio_button risk, 'unknown', class: "visuallyhidden" %>
      <%= f.label "#{risk}_unknown", t('.labels.clear'), class: 'unknown_value' %>

      <div class="form-group optional-section">
        <%= f.label "#{risk}_details", t(".types.#{risk}.details_help_text") %>
        <%= f.text_area "#{risk}_details",
            autocomplete: 'off',
            class: 'form-control',
            id: "#{f.object.name}_#{risk}_details"
        %>
      </div>
    </div>
  </div>
</fieldset>
