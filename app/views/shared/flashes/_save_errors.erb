<%- if object.errors.any? %>
    <div class="error-summary" role="group" aria-labelledby="error-summary" tabindex="-1">
      <h2 class="heading-medium error-summary-heading" id="error-summary">
        <%= flash.now[:error] %>
      </h2>
      <ul class="error-summary-list">
        <% object.errors.each do |attribute| %>
            <li>
              <%= link_to_field_with_error(object, attribute) %>
            </li>
        <% end %>
      </ul>
    </div>
<% end %>
