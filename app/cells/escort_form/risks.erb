<%= text_toggle_container(f, :to_self, '.risks') do %>
  <%= form_group_container(f, :open_acct) do %>
    <%= title_text(:open_acct, '.risks') %>
    <%= clearable_radio_buttons(f, :open_acct, '.risks') %>
  <% end %>
  <%= details_text_area_with_help_text(f, :to_self, '.risks') %>
<% end %>

<% %i[ violence
       from_others
       escape
       intolerant_behaviour
       prohibited_items
       non_association ].each do |risk| %>
  <%= render view: :toggle_with_details_field, locals: {
        f: f,
        attribute: risk,
        i18n_scope: '.risks'
      } %>
<% end %>
