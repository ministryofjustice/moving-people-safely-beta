<%= text_toggle_container(f, :to_self) do %>
  <%= form_group_container(:open_acct) do %>
    <%= title_text(:open_acct) %>
    <%= clearable_radio_buttons(f, :open_acct) %>
  <% end %>
  <%= details_text_area_with_help_text(f, :to_self) %>
<% end %>

<% %i[ violence
       from_others
       escape
       intolerant_behaviour
       prohibited_items
       non_association ].each do |risk| %>
  <%= render view: :toggle_with_details_field, locals: {
        f: f,
        attribute: risk
      } %>
<% end %>
