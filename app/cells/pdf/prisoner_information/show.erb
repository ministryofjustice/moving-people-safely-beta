<article class="prisoner-information">
  <div>
    <div class="information">
      <div class="names">
        <div class="family-name">
          <strong class="label"><%= t('.family_name') %></strong>
          <div class="input"><%= family_name %></div>
        </div>
        <div class="forenames">
          <strong class="label"><%= t('.forenames') %></strong>
          <div class="input"><%= forenames %></div>
        </div>
      </div>
      <div class="secondary">
        <div class="dates">
          <strong class="label"><%= t('.dob') %></strong>
          <div class="input"><%= date_of_birth_day %></div>
          <div class="input"><%= date_of_birth_month %></div>
          <div class="input"><%= date_of_birth_year %></div>
        </div>
        <div class="age">
          <strong class="label"><%= t('.age') %></strong>
          <div class="input"><%= age %></div>
        </div>
        <div class="sex">
          <strong class="label"><%= t('.sex') %></strong>
          <div class="input"><%= capitalized_sex %></div>
        </div>
        <div class="nationality">
          <strong class="label"><%= t('.nationality') %></strong>
          <div class="input"><%= nationality %></div>
        </div>
      </div>
      <div class="identification-numbers">
        <div class="prison-number">
          <strong class="label"><%= t('.prison_number') %></strong>
          <div class="input"><%= prison_number %></div>
        </div>
      </div>
    </div>
    <div class="image-placeholder"><%= t('.photo_message') %></div>
  </div>
</article>
